<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/result_song"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/song_available"
        android:layout_toLeftOf="@id/song_available"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/song_available"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/unavailable" />

    <TextView
        android:id="@+id/song_artists_album"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/song_available"
        android:layout_toLeftOf="@id/song_available"
        android:singleLine="true"
        android:textSize="15sp" />

</RelativeLayout>