        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=" 9"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/hot_9"
