            android:gravity="left"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
